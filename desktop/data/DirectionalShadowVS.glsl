//http://www.microbasic.net/tutorials/shadow-mapping/ShadowMapping.pdf//estos atributos vienen del archivo .OBJattribute vec4 a_position;attribute vec4 a_color;attribute vec2 a_texCoord0;attribute vec4 a_normal;//estos uniforms son seteados por mi aplicacionuniform mat4 u_mvp;// de la camarauniform mat4 TRS;uniform mat4 u_shadowVP;varying vec4 v_position;varying vec4 w_position;varying vec4 vVertex;const mat4 ScaleMatrix = mat4(0.5, 0.0, 0.0, 0.0, 0.0, 0.5, 0.0, 0.0, 0.0, 0.0, 0.5, 0.0, 0.5, 0.5, 0.5, 1.0);void main(){		v_position= u_mvp *a_position;	gl_Position = v_position;	//w_position=TRS*a_position;//original de jorge	w_position=ScaleMatrix*TRS*u_shadowVP*a_position;	vVertex=a_position;}